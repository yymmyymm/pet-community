<h4 class="mx-4 mb-4">投稿記事</h4>
  <div class='container'>
      <div class='row justify-content-center align-items-center'>
        <div class="col-auto m-0 p-0">
        <div class="photo img-thumbnail"style="background-color: #fffafa;">
          投稿ID:<%= @post_image.id %><br>
          <%= @post_image.created_at.strftime('%Y/%m/%d') %><br>
          <%= image_tag @post_image.get_image, :size => '430'%><br>
          タグ：
          <% @post_tags.each do |tag| %>
            <%= tag.name %>
          <% end %><br>
          タイトル：<%= @post_image.title %><br>
          説明：<%= @post_image.caption %><br>
          <div class="p-2 text-right">
            <% if admin_signed_in? %>
              <%= link_to "投稿を削除する", post_image_path(@post_image), method: :delete, class:"btn btn-danger " %>
            <% end %>
          </div>
        </div>
        </div>
          <div class="photo img-thumbnail m-1">
          <% @post_image.post_comments.each do |post_comment| %>
            <div class="col-auto m-3">
              <%= image_tag post_comment.customer.get_profile_image(100,100)%>
              <%= post_comment.customer.pen_name %>&nbsp;さん
              <%= post_comment.created_at.strftime('%Y/%m/%d') %>
              <div class="comment m-1">
                <p><%= post_comment.comment %></p>
              </div>
              <div class="p-2 text-right">
                <% if admin_signed_in? %>
                  <%= link_to "コメントを削除", post_image_post_comment_path(post_comment.post_image, post_comment), method: :delete, class:"btn btn-danger " %>
                <% end %>
              </div>
            </div>
          <% end %>
          </div>
        </div>
  </div>
