  <div class="container">
    <div class="row">
      <div class="col-5 px-0 mx-auto">
        <div class="mb-4">
        <h4>お問い合わせ</h4>
      </div>

      <div class="correct-msg-box">
        <% if @contact.errors.any? %>
          <div id="error_explanation">
            <ul><% @contact.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
            </ul>
          </div>
        <% end %>

      <%= form_with(model: @contact, local: true) do |f| %>
      <div class="correct-msg-main">
        <div class="contact-form">
            <div class="correct-text-field">
              <%= f.label "お名前" %><br>
              <%= f.text_field :name, :size=>"30x1",placeholder: "お名前（100文字まで）", class: "input-form" %>
            </div>
            <div class="correct-text-field">
              <%= f.label "お問合せ内容" %><br>
              <%= f.text_area :content,:size=>"40x3", placeholder: "お問合せ内容を入力してください（300文字まで）", class: "input-form" %>
            </div>
            <div class="send-btn-contents">
              <div class="register-btn text-right mb-5">
                <%= f.button type: "submit", class:"btn btn-success", style:'border-style: none;' do %>
                  送信 <i class="fas fa-paper-plane"></i>
                <% end %>
              </div>
            </div>
        </div>
      </div>
      </div>
      <% end %>
      </div>
    </div>
  </div>