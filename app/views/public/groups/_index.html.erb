  <table class="table shadow">
    <thead class="table-active">
    <tr>
      <th>画像</th>
      <th>名前</th>
      <th>メンバー数</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% groups.each do |group| %>
      <tr>
        <td><%= image_tag group.get_group_image(100,100)%></td>
        <td><%= link_to group.name, group, class: "group_#{group.id}" %></td>
        <td><%= group.group_members.count %></td>
        <% if group.is_owned_by?(current_customer) %>
          <td><%= link_to 'Edit', edit_group_path(group), class: "group_#{group.id} btn btn-sm btn-success" %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>