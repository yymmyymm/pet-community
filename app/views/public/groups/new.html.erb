<div class='container'>
  <% if @group.errors.any? %>
    <%= @group.errors.count %>件のエラーが発生しました
    <ul>
      <% @group.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  <% end %>
  <div class='row'>
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h4>グループを新しく作る</h4>
        <%= render 'form', group: @group %>
    </div>
  </div>
</div>