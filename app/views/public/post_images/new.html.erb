<h1>画像投稿</h1>

  <% if @post_image.errors.any? %>
    <%= @post_image.errors.count %>件のエラーが発生しました
    <ul>
      <% @post_image.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  <% end %>

  <%= form_with model: @post_image do |f| %>
    <h4>画像</h4>
      <%= f.file_field :image, accept: "image/*" %>
    <h4>タイトル</h4>
      <%= f.text_field :title, placeholder:"タイトル" %>
    <h4>説明(任意)</h4>
      <%= f.text_area :caption, placeholder:"説明" %>
    <h4>タグ</h4><p>,で区切ると複数タグ登録できます</p>
      <%= f.text_field :name,value: @tag_list %>
   <h4>ジャンル</h4>
        <%= f.collection_select :genre_id, Genre.all, :id, :name, :prompt => "--選択してください--" %></th>
    <%= f.submit '投稿' %>
  <% end %>