<h1>index</h1>
  <% @tag_list.each do |list|%>
    <%=link_to list.name,search_tag_path(tag_id: list.id) %>
    <%="(#{list.post_images.count})" %>
  <% end %>
<% @post_images.each do |post_image| %>
<div>
  <%= link_to post_image_path(post_image.id) do %>
    <%= image_tag post_image.get_image %>
  <% end %>
  <p>投稿ユーザー画像：<%= image_tag post_image.customer.get_profile_image(100,100) %></p>
  <p>タイトル：<%= post_image.title %></p>
  <p>説明：<%= post_image.caption.truncate(25) %></p>
  <p>ユーザーネーム：<%= post_image.customer.pen_name %></p>
  <p>コメント：<%= link_to "#{post_image.post_comments.count} コメント", post_image_path(post_image.id) %></p>
  <p>メインカテゴリー：<%= link_to post_image.category, search_post_image_path(keyword: post_image.category) %></p>
　<p>タグ一覧：<%= post_image.tags.map(&:name).join(', ') %></p>
</div>
<% end %>
<%= paginate @post_images %>
