<h3>投稿一覧</h3>
<tr>
  <td>
    <% @genres.each do |genre| %>
      <%= link_to genre.name, genre_path(genre.id), class:"btn btn-info ec-genre-list-item text-white"%>
    <% end %>
  </td>
</tr>

<% @post_images.each do |post_image| %>
<div>
  <%= link_to post_image_path(post_image.id) do %>
    <%= image_tag post_image.get_image, :size => '200x200' %>
  <% end %>
  <p>投稿ユーザー画像：<%= image_tag post_image.customer.get_profile_image(100,100) %></p>
  <p>タイトル：<%= post_image.title %></p>
  <p>説明：<%= post_image.caption.truncate(25) %></p>
  <p>ユーザーネーム：<%= post_image.customer.pen_name %></p>
  <p>ペットネーム：<%= post_image.customer.pet_name %></p>
  <p>コメント：<%= link_to "#{post_image.post_comments.count} コメント", post_image_path(post_image.id) %></p>
  <p>メインカテゴリー：<%= link_to post_image.category, search_post_image_path(keyword: post_image.category) %></p>
　<p>タグ一覧：<%= post_image.tags.map(&:name).join(', ') %></p>
　<p>ジャンル：<%= post_image.genre.name %></p>

</div>
<% end %>
<%= paginate @post_images %>

  <tr>
    <td>
    <% @tag_list.each do |list|%>
      <% unless list.post_images.count == 0 %>
      <div class="btn btn-outline-secondary">
        <%=link_to list.name,search_tag_path(tag_id: list.id), class:"ec-genre-list-item text-dark" %>
        <%="(#{list.post_images.count})" %>
      </div>
      <% end %>
    <% end %>
    </td>
  </tr>
