<h1>show</h1>

  <% @post_tags.each do |tag| %>
    <%= link_to tag.name,search_tag_path(tag_id: tag.id)%>
    <%="(#{tag.post_images.count})" %>
  <% end %>
  <% if @post_image.customer == current_customer %>
    <%= link_to "タグ編集", edit_post_image_path(@post_image.id) %>
    
  <% end %>


<div>
  <%= image_tag @post_image.get_image %>
  <p>タイトル：<%= @post_image.title %></p>
  <p>説明：<%= @post_image.caption %></p>
  <p>投稿ユーザーペット画像：<%= image_tag @post_image.customer.get_profile_image(100,100)%></p>
  <p>ユーザーネーム：<%= @post_image.customer.pen_name %></p>
  <p>投稿日：<%= @post_image.created_at.strftime('%Y/%m/%d') %></p>
  <% if @post_image.customer == current_customer %>
    <%= link_to "削除", post_image_path(@post_image), method: :delete %>
  <% end %>
<%= render "public/favorites/btn", post_image: @post_image %>
</div>
<div>
  <p>コメント件数：<%= @post_image.post_comments.count %></p>
  <% @post_image.post_comments.each do |post_comment| %>
    <p><%= image_tag post_comment.customer.get_profile_image(100,100) %></p>
    <%= post_comment.customer.name %>
    <%= post_comment.created_at.strftime('%Y/%m/%d') %><%= post_comment.comment %>
    <% if post_comment.customer == current_customer %>
      <%= link_to "削除", post_image_post_comment_path(post_comment.post_image, post_comment), method: :delete %>
    <% end %>
  <% end %>
</div>
<div>
  <%= form_with model: [@post_image, @post_comment] do |f| %>
    <%= f.text_area :comment, rows: '5', placeholder: "コメントをここに" %>
    <%= f.submit "送信する" %>
  <% end %>
</div>