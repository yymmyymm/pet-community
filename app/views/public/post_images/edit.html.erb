<h4 class="ml-4 mb-1">編集</h4>
  <div class="ml-4 mb-3">
    <%= form_with model: @post_image do |f| %>
      <h5>画像</h5>
        <%= f.file_field :image, accept: "image/*" %>
      <h5>タイトル</h5>
        <%= f.text_field :title, placeholder:"タイトル（100文字まで）" %>
      <h5>説明(任意)</h5>
        <%= f.text_area :caption,:size=>"30x4", placeholder:"説明（200文字まで）" %>
      <h5>タグ(任意)</h5><p>、で区切ると複数タグ登録できます</p>
        <%= f.text_field :name,value: @tag_list, placeholder:"タグ（20文字まで）" %>
      <h5>ジャンル</h5>
        <%= f.collection_select :genre_id, Genre.all, :id, :name, :prompt => "--選択してください--" %>
      <%= f.submit '投稿',class:"btn btn-success mt-2" %>
    <% end %>

  </div>