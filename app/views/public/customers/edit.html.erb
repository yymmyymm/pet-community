<h1>マイページ編集</h1>
<%= form_with model: @customer do |f| %>
  <div>
    <label for="inputName">名前</label>
    <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"名前"%>
    <label for="inputName">フリガナ</label>
    <%= f.text_field :name_kana, id:"inputName", placeholder:"フリガナ"%>
  </div>
  <div>
    <label for="inputName">メールアドレス</label>
    <%= f.email_field :email, id:"inputName", placeholder:"メールアドレス"%>
  </div>

  <div>
  <label for="inputName">ハンドルネーム</label>
    <%= f.text_field :pen_name, id:"inputName", placeholder:"ハンドルネーム"%>
  </div>
  <div>
  <label for="inputName">ペットネーム</label>
    <%= f.text_field :pet_name, id:"inputName", placeholder:"ペットネーム"%>
  </div>
  <div>
  <label for="inputName">ペット紹介</label>
    <%= f.text_area :introduce, id:"inputName", placeholder:"ペット紹介"%>
  </div>
  <div>
  <label for="inputImage">ペット画像</label>
    <%= f.file_field :profile_image, placeholder: "ペット画像", accept: "image/*" %>
  </div>
  <%= f.submit "変更を保存" %>

  <%= link_to unsubscribe_customers_path, class: "ml-5" do %>
    <button type="button" class="btn btn-danger">退会する</button>
  <% end %>


<% end %>