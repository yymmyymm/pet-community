    <table class="table shadow">
      <thead class="table-active">
        <tr>
          <th>ユーザーネーム</th>
          <th>プロフィール画像</th>
          <th>ペットネーム</th>
          <th>フォロワー数</th>
          <th>お気に入り数</th>
          <th>詳細ページ</th>
        </tr>
      </thead>
  <% customers.each do |customer| %>
  <tbody>
    <tr>
      <% if customer.is_deleted == false %>
        <td><%= customer.pen_name %></td>
        <% else %>
        <td>退会済み<br>
        ユーザー</td>
        <% end %>
      <td><%= image_tag customer.get_profile_image(100,100)%></td>
      <td><%= customer.pet_name %></td>
      <td><%= customer.followers.count %></td>
      <td><%= customer.favorites.count %></td>
      <% if customer.is_deleted == false %>
      <td><%= link_to "show", customer, class: "customer_#{customer.id}" %></td>
      <% end %>
    </tr>
  </tbody>
  <% end %>
    </table>
