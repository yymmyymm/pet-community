<% if post_image.favorited_by?(current_customer) %>
  <%= link_to post_image_favorites_path(post_image), method: :delete, class: "text-dark nav-link" do %>
    <i class="fas fa-heart" aria-hidden="true" style="color: #ff69b4;"></i>
    <%= post_image.favorites.count %>
  <% end %>
<% else %>
  <%= link_to post_image_favorites_path(post_image), method: :post, class: "text-dark nav-link" do %>
    <i class="fas fa-heart" aria-hidden="true" style="color: #00bfff;"></i>
    <%= post_image.favorites.count %>
  <% end %>
<% end %>
