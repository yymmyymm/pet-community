<h2>新規会員登録</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "public/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :"お名前" %><br>
    <%= f.text_field :name, autofocus: true %><br>
    <%= f.label :"フリガナ" %><br>
    <%= f.text_field :name_kana %>
  </div>

  <div class="field">
    <%= f.label :"ユーザー名" %><br>
    <%= f.text_field :pen_name %><br>
  </div>


  <div class="field">
    <%= f.label :"メールアドレス" %><br />
    <%= f.email_field :email, autocomplete: "email"%>
  </div>

  <div class="field">
    <%= f.label :"パスワード"%>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> 文字まで)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :"パスワード再記入" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "ログイン" %>
  </div>
<% end %>

<%= render "public/shared/links" %>
